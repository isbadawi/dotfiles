[user]
  name = Ismail Badawi
  email = ismail@badawi.io
[core]
  editor = mvim -v
  excludesfile = ~/.gitignore
[color]
  ui = true
[diff]
  algorithm = patience
[branch]
  autosetuprebase = always
[push]
  default = simple
[status]
  branch = true
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
  keepBackup = false
[alias]
  aliases = config --get-regexp alias
  staged = diff --staged
  unstage = reset HEAD
  startover = reset --hard HEAD
  branches = branch --verbose
  remotes = remote --verbose
  affected-by = diff-tree --no-commit-id --name-status -r

  l = "!source ~/.githelpers && pretty_git_log"
  ci = commit --verbose
